{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "dry-dock Report Schema",
  "type": "object",
  "properties": {
    "internal_duplicates": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "hash": {
            "type": "string"
          },
          "lines": {
            "type": "integer"
          },
          "frequency": {
            "type": "integer"
          },
          "score": {
            "type": "number"
          },
          "project": {
            "type": "string"
          },
          "occurrences": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "hash",
          "lines",
          "frequency",
          "score",
          "project",
          "occurrences"
        ]
      }
    },
    "cross_project_leakage": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "hash": {
            "type": "string"
          },
          "lines": {
            "type": "integer"
          },
          "frequency": {
            "type": "integer"
          },
          "spread": {
            "type": "integer"
          },
          "score": {
            "type": "number"
          },
          "projects": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "occurrences": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "project": {
                  "type": "string"
                },
                "file": {
                  "type": "string"
                }
              },
              "required": [
                "project",
                "file"
              ]
            }
          }
        },
        "required": [
          "hash",
          "lines",
          "frequency",
          "spread",
          "score",
          "projects",
          "occurrences"
        ]
      }
    }
  },
  "required": [
    "internal_duplicates",
    "cross_project_leakage"
  ]
}